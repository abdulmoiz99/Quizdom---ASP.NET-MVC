@model Quizdom.Models.Users

@{
    ViewBag.Title = "StudentLoginIncorrect";
    Layout = "~/Views/Shared/_Student.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-12 col-xl-10" style="width: 500px;">
            <div class="card shadow-lg o-hidden border-0 my-5">
                <div class="card-body p-0">
                    <div class="p-5">
                        <div class="text-center">
                            <h4 class="text-dark mb-4">Student Login</h4>
                        </div><label class="form-label" style="margin-left: 10px;color: rgb(255,0,0);">Invalid code! Please try again...</label>
                        <form class="user" action="StudentQuiz" method="post">
                            <div class="mb-3">
                                <input class="form-control form-control-user"  placeholder="Enter Quiz Code..." name="Link" required="" style="font-size: 14px;">
                            </div>
                            <div class="mb-3"></div>
                            <div class="mb-3">
                                <div class="custom-control custom-checkbox small"></div>
                            </div><button class="btn btn-primary d-block btn-user w-100" type="submit" style="background: rgb(78, 115, 223);font-size: 14;">Join</button>
                        </form>
                        <div class="text-center"></div>
                        <div class="text-center"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>